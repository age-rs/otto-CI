{
  "compilerOptions": {
    "alwaysStrict" : true,
    "baseUrl" : ".",
    "outDir": "./build",
    "module" : "commonjs",
    "lib" : ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers" : true,
    "target": "es2015",
    "sourceMap": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    "paths": {
        "@otto-orchestrator/*": ["./services/orchestrator/src/*"],
        "@otto/*": ["./lib/src/*"]
    },

    "typeRoots" : [
        "./node_modules/@types"
    ]
  }
}
